# DSA210 Term Project
# Volleyball Positional Impact Analysis (VNL 2025 – Final Four)
# Author: Tuana İnci
# Goal: Explore how positions (OH, MB, O, S, L) & skills (attack, block, serve) relate to team success

# -----------------------------
# Step 0 — Imports & Settings
# -----------------------------
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from scipy import stats
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error, r2_score

sns.set(style="whitegrid")
plt.rcParams["figure.dpi"] = 140

# -----------------------------
# Step 1 — Load Data
# -----------------------------
TEAM_CSV   = "team_summary.csv"
PLAYER_CSV = "player_stats.csv"

team_df   = pd.read_csv(TEAM_CSV)
player_df = pd.read_csv(PLAYER_CSV)

print("Loaded:", TEAM_CSV, team_df.shape)
print("Loaded:", PLAYER_CSV, player_df.shape)
display(team_df.head())
display(player_df.head())

# -----------------------------
# Step 2 — Cleaning / Prep
# -----------------------------
player_df.columns = player_df.columns.str.strip()

numeric_cols = ["Attack Points", "Block Points", "Serve Points", "Errors", "Efficiency %"]
for c in numeric_cols:
    player_df[c] = pd.to_numeric(player_df[c], errors="coerce")

player_df["Position"] = player_df["Position"].astype("category")
player_df["Total Points"] = (
    player_df["Attack Points"].fillna(0)
    + player_df["Block Points"].fillna(0)
    + player_df["Serve Points"].fillna(0)
)

# Minimal NA handling for analysis sections that require complete rows
player_clean = player_df.dropna(subset=["Attack Points","Block Points","Serve Points","Total Points"])

print("\nMissing values per column (player stats):")
print(player_df.isna().sum().to_string())

# -----------------------------
# Step 3 — EDA
# -----------------------------
# 3.1 Total points distribution by position
plt.figure(figsize=(8,5))
sns.boxplot(x="Position", y="Total Points", data=player_clean, palette="coolwarm")
plt.title("Total Points by Position (All Final-Four Matches)")
plt.xlabel("Position"); plt.ylabel("Total Points")
plt.tight_layout(); plt.show()

# 3.2 Average efficiency by position
avg_eff = player_df.groupby("Position")["Efficiency %"].mean().sort_values(ascending=False)
plt.figure(figsize=(7,5))
avg_eff.plot(kind="bar")
plt.title("Average Efficiency (%) by Position")
plt.ylabel("Efficiency (%)")
plt.tight_layout(); plt.show()

# 3.3 Correlation heatmap of player features
corr = player_clean[["Attack Points","Block Points","Serve Points","Errors","Efficiency %","Total Points"]].corr()
plt.figure(figsize=(8,6))
sns.heatmap(corr, annot=True, cmap="YlOrRd", fmt=".2f")
plt.title("Correlation Heatmap (Player-Level)")
plt.tight_layout(); plt.show()

# 3.4 Team skill distribution (Attack, Block, Serve)
melted = team_df.melt(
    id_vars=["Team","Result"], 
    value_vars=["Attack","Block","Serve"], 
    var_name="Skill", value_name="Points"
)
plt.figure(figsize=(10,6))
sns.barplot(data=melted, x="Team", y="Points", hue="Skill")
plt.title("Team Skill Distribution – Final Four")
plt.ylabel("Points")
plt.tight_layout(); plt.show()

# -----------------------------
# Step 4 — Hypothesis Tests
# -----------------------------
# H1: Mean total points differ across positions (ANOVA)
groups = [g["Total Points"].dropna() for _, g in player_clean.groupby("Position")]
anova = stats.f_oneway(*groups)
print("\n[H1] ANOVA across positions — F={:.3f}, p={:.4f}".format(anova.statistic, anova.pvalue))
print("  ->", "SIGNIFICANT" if anova.pvalue < 0.05 else "Not significant")

# H2: Attack vs Block (per-player paired test)
t_stat, p_val = stats.ttest_rel(player_clean["Attack Points"], player_clean["Block Points"])
print("\n[H2] Paired t-test (Attack vs Block) — t={:.3f}, p={:.4f}".format(t_stat, p_val))
print("  ->", "SIGNIFICANT difference" if p_val < 0.05 else "No significant difference")

# (Optional variation) Team-level: do winning teams show higher attack?
if "Result" in team_df.columns and "Attack" in team_df.columns:
    win_attack  = team_df.loc[team_df["Result"]=="Win",  "Attack"]
    lose_attack = team_df.loc[team_df["Result"]=="Lose", "Attack"]
    if len(win_attack)>0 and len(lose_attack)>0:
        t2 = stats.ttest_ind(win_attack, lose_attack, equal_var=False)
        print("\n[H3] Team Attack — Win vs Lose (Welch t) — t={:.3f}, p={:.4f}".format(t2.statistic, t2.pvalue))
        print("  ->", "Winners have significantly different attack" if t2.pvalue < 0.05 else "No significant difference")
    else:
        print("\n[H3] Skipped (need both Win and Lose in team_summary.csv)")

# -----------------------------
# Step 5 — Simple ML (Player Total Points)
# -----------------------------
X = player_clean[["Attack Points","Block Points","Serve Points"]]  # features
y = player_clean["Total Points"]

X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.25, random_state=42)
lr = LinearRegression().fit(X_train, y_train)
y_pred = lr.predict(X_test)

mse = mean_squared_error(y_test, y_pred)
r2  = r2_score(y_test, y_pred)

print("\n[ML] Linear Regression predicting Total Points from Attack/Block/Serve")
print("  Coefficients:", dict(zip(X.columns, lr.coef_.round(3))))
print("  Intercept   :", round(lr.intercept_, 3))
print("  MSE         :", round(mse, 3))
print("  R^2         :", round(r2, 3))

plt.figure(figsize=(7,6))
plt.scatter(y_test, y_pred, alpha=0.7)
mn, mx = min(y_test.min(), y_pred.min()), max(y_test.max(), y_pred.max())
plt.plot([mn, mx],[mn, mx], 'k--', lw=2)
plt.xlabel("Actual Total Points"); plt.ylabel("Predicted Total Points")
plt.title("Actual vs Predicted (Player Total Points)")
plt.tight_layout(); plt.show()

# -----------------------------
# Step 6 — Auto-Summary
# -----------------------------
print("\n[Summary]")
print("- Positions show different scoring profiles (boxplot).")
print("- Average efficiency by role: check bar chart for which roles stand out.")
print("- Attack/Block/Serve all positively track Total Points (see heatmap & coefficients).")
print("- Hypotheses printed above; interpret p-values with α=0.05.")
print("- Model is explanatory (not causal); great for communicating which skills drive scoring.")
